<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/simpleLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="비밀번호"
        android:textSize="50dp"
        android:paddingTop="30dp"
        />
    <TextView
        android:id="@+id/simpleLoginPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="80dp"
        />
    <Button
        android:id="@+id/simpleLoginNum1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginPw"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/n_btnbackground"
        android:text="1"
        android:textSize="80dp"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum2"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/simpleLoginNum2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginPw"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum1"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum3"
        android:background="@drawable/n_btnbackground"
        android:text="2"
        android:textSize="80dp"
        />
    <Button
        android:id="@+id/simpleLoginNum3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginPw"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum2"
        android:background="@drawable/n_btnbackground"
        android:text="3"
        android:textSize="80dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/simpleLoginNum4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/n_btnbackground"
        android:text="4"
        android:textSize="80dp"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum5"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/simpleLoginNum5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum2"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum4"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum6"
        android:background="@drawable/n_btnbackground"
        android:text="5"
        android:textSize="80dp"
        />
    <Button
        android:id="@+id/simpleLoginNum6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum3"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum5"
        android:background="@drawable/n_btnbackground"
        android:text="6"
        android:textSize="80dp"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/simpleLoginNum7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/n_btnbackground"
        android:text="7"
        android:textSize="80dp"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum8"
        app:layout_constraintHorizontal_chainStyle="packed"
        />
    <Button
        android:id="@+id/simpleLoginNum8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum5"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum7"
        app:layout_constraintRight_toLeftOf="@id/simpleLoginNum9"
        android:background="@drawable/n_btnbackground"
        android:text="8"
        android:textSize="80dp"
        />
    <Button
        android:id="@+id/simpleLoginNum9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleLoginNum6"
        app:layout_constraintLeft_toRightOf="@+id/simpleLoginNum8"
        android:background="@drawable/n_btnbackground"
        android:text="9"
        android:textSize="80dp"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>